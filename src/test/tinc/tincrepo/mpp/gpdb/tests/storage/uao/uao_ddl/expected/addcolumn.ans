-- @Description Tests that it is possible to SELECT from a AO table after a column as been
-- added.
-- 
select * from mytab;
 col1 |         name         
------+----------------------
    1 | a                   
    3 | c                   
    2 | b                   
(3 rows)

alter table mytab ADD COLUMN address varchar(30) default 'none';
ALTER TABLE
select * from mytab;
 col1 |         name         | address 
------+----------------------+---------
    1 | a                    | none
    3 | c                    | none
    2 | b                    | none
(3 rows)

