-- @Description Tests the AO segment file selection policy
--
DROP TABLE IF EXISTS ao;
CREATE TABLE ao (a INT) WITH (appendonly=true, orientation=@orientation@);
-- Case 1: Both transactions insert intial segment files into aoseg.
1: BEGIN;
2: BEGIN;
1: INSERT INTO AO VALUES (1);
-- Segment file 0 should be created
2U: SELECT segno FROM gp_ao_or_aocs_seg_name('ao');
2: INSERT INTO AO VALUES (1);
-- Segment file 1 should be created
2U: SELECT segno FROM gp_ao_or_aocs_seg_name('ao');
2: COMMIT;
-- Transaction 2 should commit before 1.  It validates that
-- transaction 2 chose a different segfile than transaction 1.
1: COMMIT;
2U: SELECT segno, tupcount FROM gp_ao_or_aocs_seg_name('ao');

-- Case 2: Concurrent inserts with existing segment files in aoseg.
1: INSERT INTO AO VALUES (1);
2U: SELECT segno, tupcount FROM gp_ao_or_aocs_seg_name('ao');
1: INSERT INTO AO VALUES (2);
2U: SELECT segno, tupcount FROM gp_ao_or_aocs_seg_name('ao');
1: BEGIN;
1: INSERT INTO AO VALUES (2);
2: BEGIN;
2: INSERT INTO AO VALUES (2);
1: COMMIT;
2: COMMIT;
2U: SELECT segno, tupcount FROM gp_ao_or_aocs_seg_name('ao');
1: insert into ao select generate_series(1,100000);
1: INSERT INTO AO VALUES (2);
2U: SELECT segno, case when tupcount = 0 then 'zero' when tupcount <= 5 then 'few' else 'many' end FROM gp_ao_or_aocs_seg_name('ao');
